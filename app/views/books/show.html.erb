<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/info', user: @user %>
   <%= render 'new', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table">
    <tbody>
     <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @user == current_user %>
      <td>
          <%= link_to "Edit", edit_book_path(@book) %>
      </td>
      <td>
          <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      </td>
      <% end %>
     </tr>


    </tbody>
   </table>
  </div>
 </div>
</div>
