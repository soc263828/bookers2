<a>Books#index</a>

<h1>Books</h1>
<%= render 'users/info', user: @user %>
<%= render 'new', book: @book %>

<div class="container">
  <div class="row">
   <table class="table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
     <tr>
      <td><%= image_tag @user.get_profile_image %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td></td>
     </tr>
    <% end %>
</tbody>
   </table>
  </div>
</div>
