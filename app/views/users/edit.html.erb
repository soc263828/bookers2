<% end %>
<%= form_with model: @user, url: update_user_path(@user.id), method: :patch do |f| %>
<label for="inputName">Name</label>
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
<label for="inputImage">Image</label>
<%= f.file_field :image, placeholder: "Image", accept: "image/*" %>
<label for="inputIntroduction">Introduction</label>
<%= @user.introduction %>

<%= f.submit "Update User" %>

