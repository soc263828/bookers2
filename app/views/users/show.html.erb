<body>
 <main>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
     <%= render 'info', user: @user %>
     <%= render 'books/new', book: @book %>
    </div>
   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <% @books.each do |book| %>
      <tr>
       <td><%= image_tag @users.get_profile_image %></td>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td></td>
      </tr>
     <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>
 </main>
</body>



